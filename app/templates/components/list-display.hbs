{{#if editingTitle}}
<form {{action 'toggleEdit' on="submit"}}>
  {{input value=list.title class="list__title--input" focus-out='toggleEdit'}}
</form>
{{else}}
  <h3 class="list__title">{{list.title}}</h3>
  <a class="list__edit" href="#" {{action 'toggleEdit'}}><i class="fa fa-edit"></i></a>
{{/if}}

<ul class="list__cards-area">
  {{#each list.cards as |card| }}
    {{card-display card=card list=list deleteCard=(action 'deleteCard' card.id)}}
  {{/each}}
  <li class="card__wrapper"><a class="new-card__button" {{action 'addNewCard'}}>Add New Card</a></li>
</ul>